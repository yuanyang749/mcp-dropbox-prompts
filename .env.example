# Dropbox Configuration (Choose either Access Token OR Refresh Token flow)
DROPBOX_ACCESS_TOKEN=
# Recommended: Long-lived Refresh Token
DROPBOX_REFRESH_TOKEN=
DROPBOX_CLIENT_ID=
DROPBOX_CLIENT_SECRET=

# WebDAV (Nutstore/Jianguoyun) Configuration
# If WEBDAV_USERNAME is set, it will take precedence over Dropbox
WEBDAV_USERNAME=
WEBDAV_PASSWORD=
WEBDAV_URL=https://dav.jianguoyun.com/dav/

# Common Settings
HTTPS_PROXY=http://127.0.0.1:7890

# Root path for prompts storage
# For WebDAV: MUST be the folder containing your .md files, e.g., /mcp-prompts
# For Dropbox: Usually /
DROPBOX_ROOT_PATH=/
WEBDAV_ROOT_PATH=/mcp-prompts

# Set to "true" to enable recursive scanning of subdirectories (WebDAV only)
# Default: false (only scans ROOT_PATH, not subdirectories)
WEBDAV_RECURSIVE=false
